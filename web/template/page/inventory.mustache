<div class="container">
  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
            aria-controls="collapseOne">
            Register new
          </button>
        </h5>
      </div>

      <form id="mainForm">
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label for="name" class="">Inbound item name</label>
                  <input type="text" class="form-control" id="name" />
                  <div id="nonempty" class="invalid-feedback">
                    Please choose a valid type name
                  </div>
                  <div id="unique" class="invalid-feedback">
                    Please choose a unique type name
                  </div>
                </div>
              </div>
            </div>
            <div class="row pb-4">
              <div class="col-md-12">
                <button type="submit" id="add" class="btn btn-secondary">
                  Add
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-3">
    <div class="col-md-12">
      <table id="inventoryTable" class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>