<div class="container">
  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#stockCollapse" aria-expanded="true"
            aria-controls="stockCollapse">
            Provision stock
          </button>
        </h5>
      </div>

      <div id="stockCollapse" class="collapse hide" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="inventoryItemType" class="">Item<br />
                </label>
                <select class="form-control custom-select" id="inventoryItemType">
                  <option selected="">Choose one</option>
                </select>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">
                <label for="provisionQty" class="">Count<br /></label>
                <input type="number" class="form-control" id="provisionQty" />
                <div id="provisionQtyErr" class="invalid-feedback">
                  Please choose a quantity
                </div>
              </div>
            </div>
          </div>
          <div class="row pb-4">
            <div class="col-md-12">
              <button id="provisionStock" class="btn btn-secondary" disabled>Add</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-3">
    <div class="col-md-12">
      <table id="stock" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Count</th>
          </tr>
          <tbody></tbody>
        </thead>
      </table>
    </div>
  </div>
</div>