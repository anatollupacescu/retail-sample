<div class="container">
  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
            aria-controls="collapseOne">
            Create recipe
          </button>
        </h5>
      </div>

      <div id="collapseOne" class="collapse hide" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="recipeItemName" class="">Ingredient<br /></label>
                <select class="form-control custom-select" id="recipeItemName">
                  <option selected="">Choose one</option>
                </select>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">
                <label for="recipeItemQty" class="">Quantity<br /></label>
                <input type="number" class="form-control" id="recipeItemQty" />
                <div id="recipeItemQtyErr" class="invalid-feedback">
                  Please choose a quantity
                </div>
              </div>
            </div>
          </div>
          <div class="row pb-4">
            <div class="col-md-12">
              <button id="addRecipeItem" class="btn btn-secondary" disabled="">
                Add to list
              </button>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <table id="recipeItems" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Count</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
              <div id="noRowsErr" class="invalid-feedback">
                Please choose incredients
              </div>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label for="recipeName">New recipe name<br />
                </label>
                <input type="text" class="form-control" id="recipeName" />
                <div id="noNameErr" class="invalid-feedback">
                  Please choose a name
                </div>
                <div id="noUniqueNameErr" class="invalid-feedback">
                  The name has to be unique
                </div>
              </div>
            </div>
          </div>
          <div class="row pb-4">
            <div class="col-md-12">
              <button id="saveRecipe" class="btn btn-secondary"  disabled="">
                Save new finished product
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-3">
    <div class="col-md-12">
      <table id="recipes" class="table table-bordered cursor-pointer">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col-md-12">
      <button type="button" class="btn btn-primary" id="openRecipeModalBtn">
        Edit record
      </button>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="recipeModal" tabindex="-1" role="dialog" aria-labelledby="recipeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="recipeModalLabel">View recipe</h5>
        <button type="button" class="close close-modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              ID: <span id="recipeModalID" class="pl-1" />
            </div>
            <div class="col-md-12">
              Name: <span id="recipeModalName" class="pl-1" />
            </div>
            <div class="col-md-12">
              Ingredients:
            </div>
            <div class="col-md-12 pt-3">
              <table id="modalRecipeItems" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Count</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary close-modal">Done</button>
      </div>
    </div>
  </div>
</div>